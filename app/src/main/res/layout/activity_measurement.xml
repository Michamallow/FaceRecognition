<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeasurementActivity">

    <ImageView
        android:id="@+id/measurementPhotoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_face_retouching_natural_24" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/measurementLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Placez le point : E1"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            />

        <Button
            android:id="@+id/btnRecognize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recognize"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/lavender"
            android:visibility="invisible"
            android:onClick="onRecognizeClick"
            />

        <EditText
            android:id="@+id/profileNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du profil"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/lavender"
            android:visibility="invisible"
            android:onClick="onSaveProfileClick"
            />
    </LinearLayout>

    <Button
        android:id="@+id/loadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charger"
        android:layout_marginTop="50dp"
        android:onClick="onLoadImageClick"
        android:backgroundTint="@color/lavender"
        />
</RelativeLayout>